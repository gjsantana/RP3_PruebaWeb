    @model IEnumerable<Rp3.Test.Mvc.Models.PersonViewModel>
@{
    ViewBag.Title = "Personas";
}

<div class="jumbotron">
    <h1>Personas</h1>
    <a class="btn btn-primary" href="#">Nuevo</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <table style="width:50%">
            <thead>
                <tr>
                    <th width="100px">Código</th>
                    <th>Persona</th>
                    <th width="50px">Activo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.PersonId</td>
                        <td>@person.Name</td>
                        <td class="text-center">@Html.CheckBox("person-active-check", person.Active, htmlAttributes: new { disabled = "disabled" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

